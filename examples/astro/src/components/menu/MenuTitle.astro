---
import type { HTMLAttributes } from 'astro/types'
import { cn } from '@/lib/style'

export type MenuTitleProps = HTMLAttributes<'summary'>

const props = Astro.props as MenuTitleProps
---

<summary
  {...props}
  class={cn(
    'gap-md hover:bg-fg/10 dark:hover:bg-fgdark/20 py-sm px-xs group-open:mb-sm text-fg/80 hover:text-fg dark:text-fgdark/80 dark:hover:text-fgdark flex w-full cursor-pointer list-none appearance-none items-center justify-between rounded-md transition-colors',
    props.class
  )}
>
  <slot />
  <svg viewBox="0 -9 3 24" class="h-[1.5rem] w-[2rem] rotate-0 transition-transform group-open:rotate-90"
    ><path d="M0 0L3 3L0 6" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"></path></svg
  >
</summary>
