{
  "output": "@/components",
  "packageManager": "pnpm",
  "typescript": {
    "src": "./src/",
    "alias": "@/",
    "tsconfig": "./tsconfig.json"
  },
  "githubProtocol": "api",
  "frameworks": {
    "astro": {
      "extension": ".astro"
    },
    "react": {
      "extension": ".react.tsx"
    },
    "solid": {
      "extension": ".solid.tsx"
    }
  },
  "rsc": "true",
  "style": {
    "config": "./tailwind.config.ts",
    "globals": "@/assets/globals.css",
    "util": "@/lib/style",
    "solution": "tailwind"
  },
  "scripts": {
    "add": "pnpm prettier --write ."
  }
}
