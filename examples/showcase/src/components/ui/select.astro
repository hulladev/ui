---
import { cn } from '@/lib/style'
import type { HTMLAttributes } from 'astro/types'

export type Props = HTMLAttributes<'select'>
const { class: className, ...props } = Astro.props
---

<select
  {...props}
  class:list={cn(
    'py-xs dark:bg-bgdark dark:text-fgdark cursor-pointer rounded-md bg-transparent',
    'focus-visible:ring-primary ring-inset focus-visible:ring-1',
    className
  )}
>
  <slot />
</select>
