---
import type { HTMLAttributes } from 'astro/types'
import { cn } from '@/lib/style'
import { menutitle } from '../style/tailwind.menu'

export type MenuTitleProps = HTMLAttributes<'summary'>

const props = Astro.props as MenuTitleProps
---

<summary {...props} class={cn(menutitle, props.class)}>
  <slot />
  <svg viewBox="0 -9 3 24" class="h-[1.5rem] w-[2rem] rotate-0 transition-transform group-open:rotate-90"
    ><path d="M0 0L3 3L0 6" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"></path></svg
  >
</summary>
