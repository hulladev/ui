{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "watch": {
      "dependsOn": ["^watch"],
      "outputs": [".next/**", "!.next/cache/**"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "generate:ui": {
      "outputs": ["scripts/generate.js", "../../generated"],
      "inputs": ["scripts/generate.ts", "src"],
      "cache": false
    },
    "generate:clean": {
      "dependsOn": ["^generate:ui"],
      "inputs": ["scripts/generate.ts", "src"],
      "outputs": ["scripts/generate.js"],
      "cache": false
    }
  }
}
