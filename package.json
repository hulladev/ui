{
  "name": "ui",
  "namespace": "@hulla",
  "author": {
    "name": "Samuel Hulla",
    "email": "hulla@hulla.dev",
    "url": "https://hulla.dev"
  },
  "maintainers": [
    "Samuel Hulla <hulla@hulla.dev>"
  ],
  "homepage": "https://hulla.dev/projects/ui",
  "repository": {
    "type": "git",
    "url": "https://github.com/hulladev/ui.git",
    "directory": "packages/ui"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "turbo build",
    "watch": "turbo watch",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "generate:ui": "turbo generate:ui",
    "generate:clean": "turbo generate:clean",
    "prepare": "husky"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "bunchee": "^5.1.5",
    "commitizen": "^4.3.0",
    "cz-emoji": "1.3.2-canary.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^1.2.2",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.14.0",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "turbo": "^2.0.12",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@9.7.0",
  "engines": {
    "node": ">=18"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji"
    },
    "cz-emoji": {
      "skipScope": true,
      "scopes": [
        "cli",
        "ui",
        "gen",
        "codemods",
        "examples",
        "repo"
      ],
      "types": [
        {
          "emoji": "‚úÖ",
          "code": ":white_check_mark: feat:",
          "description": "a new functionality",
          "name": "feat"
        },
        {
          "emoji": "üêû",
          "code": ":lady_beetle: fix:",
          "description": "a bug fix",
          "name": "fix"
        },
        {
          "emoji": "üîß",
          "code": ":wrench: update:",
          "description": "a code change that neither fixes a bug nor adds a feature",
          "name": "update"
        },
        {
          "emoji": "üìö",
          "code": ":books: docs:",
          "description": "documentations",
          "name": "docs"
        },
        {
          "emoji": "üé®",
          "code": ":art: style:",
          "description": "tailwind, formatting, etc.",
          "name": "style"
        },
        {
          "emoji": "ü™õ",
          "code": ":screwdriver: config:",
          "description": "configuration files",
          "name": "config"
        },
        {
          "emoji": "ü§ñ",
          "code": ":robot: devops:",
          "description": "ci/cd or other form of automation",
          "name": "devops"
        },
        {
          "emoji": "üóÇÔ∏è",
          "code": ":card_index_dividers: assets:",
          "description": "static assets for the website",
          "name": "assets"
        },
        {
          "emoji": "‚ôªÔ∏è",
          "code": ":recycle: cleanup:",
          "description": "code cleanup",
          "name": "cleanup"
        }
      ]
    }
  },
  "dependencies": {
    "tailwindcss": "^3.4.6"
  }
}
